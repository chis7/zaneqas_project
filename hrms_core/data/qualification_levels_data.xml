            <field name="typical_qualification_type">Master’s Degree</field>
            <field name="zqf_sub_framework">higher_education</field>
            <field name="standard_duration">1½ to 2 years after Level 7</field>
        </record>
        <record id="level_10" model="hrms.qualification.level">
