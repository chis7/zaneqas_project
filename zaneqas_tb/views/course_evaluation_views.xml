<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="training_form" model="ir.ui.view">
        <field name="name">training.course.evaluation.form</field>
        <field name="model">training.course.evaluation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="'state' != 'draft'"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="'state' != 'confirm'"/>
                    <button name="action_draft" string="Draft" type="object" class="btn-primary" invisible="'state' != 'cancel'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="'state' not in ['draft', 'done', 'confirm']"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="course_title" decoration-bf="1"/>
                            <field name="institution" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="date" decoration-bf="1"/>
                            <field name="duration" decoration-bf="1"/>
                        </group>
                    </group>
                    <separator/>
                    <group string="To complete this form, answer the questions by marking the box, or circling the appropriate number,
you believe most closely represents your opinion">
                        <group>
                            <field name="pre_course_briefing" widget="radio" options="{'horizontal': true}"
                                   decoration-bf="1"/>
                            <field name="prepared_and_ready" widget="radio" options="{'horizontal': true}"
                                   decoration-bf="1"/>
                            <field name="confident_using_knowledge" decoration-bf="1"/>
                            <field name="enough_time_for_training" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="aware_of_objectives" widget="radio" options="{'horizontal': true}"
                                   decoration-bf="1"/>
                            <field name="relevant_to_job" decoration-bf="1"/>
                            <field name="extent_objectives_met" decoration-bf="1"/>
                        </group>
                    </group>
                    <separator/>
                    <group string="How useful did you find the following training methods?">
                        <group>
                            <field name="usefulness_group_work" decoration-bf="1"/>
                            <field name="usefulness_overhead_transparencies" decoration-bf="1"/>
                            <field name="usefulness_notes" decoration-bf="1"/>
                            <field name="usefulness_stimulation_exercises" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="usefulness_lectures" decoration-bf="1"/>
                            <field name="usefulness_videos" decoration-bf="1"/>
                            <field name="usefulness_discussions" decoration-bf="1"/>
                            <field name="usefulness_other" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="Please rate the training provider in the following areas:">
                        <group>
                            <field name="training_provider_rating_knowledge" decoration-bf="1"/>
                            <field name="training_provider_rating_involving" decoration-bf="1"/>
                            <field name="training_provider_rating_availability" decoration-bf="1"/>
                            <field name="training_provider_rating_other" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="training_provider_rating_presentation" decoration-bf="1"/>
                            <field name="training_provider_rating_pace" decoration-bf="1"/>
                            <field name="training_provider_rating_visual_aids" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="How did you rate the following Facilities?">
                        <group>
                            <field name="facility_rating_training_venue" decoration-bf="1"/>
                            <field name="facility_rating_accommodation" decoration-bf="1"/>
                            <field name="facility_rating_transport" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="facility_rating_food" decoration-bf="1"/>
                            <field name="facility_rating_service" decoration-bf="1"/>
                            <field name="facility_rating_other" decoration-bf="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--<record id="training_search" model="ir.ui.view">
        <field name="name">End of Course Evaluation</field>
        <field name="model">training.course.evaluation</field>
        <field name="arch" type="xml">
            <search string="Training">
                <field name="course_title"/>
                <field name="institution"/>
                <field name="date"/>
                <field name="duration"/>
            </search>
        </field>
    </record>-->

    <record id="course_evaluation_action" model="ir.actions.act_window">
        <field name="name">Course Evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">training.course.evaluation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="xml">
            <tree>
                <field name="course_title"/>
                <field name="institution"/>
                <field name="date"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>
</odoo>