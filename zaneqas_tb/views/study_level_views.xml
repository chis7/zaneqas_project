<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="level_of_study_tree" model="ir.ui.view">
        <field name="name">level.of.study.tree</field>
        <field name="model">level.of.study</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="level_of_study_form" model="ir.ui.view">
        <field name="name">level.of.study.tree</field>
        <field name="model">level.of.study</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="status"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="level_of_study_search" model="ir.ui.view">
        <field name="name">level.of.study.search</field>
        <field name="model">level.of.study</field>
        <field name="arch" type="xml">
            <search string="Level of Study">
                <field name="name"/>
                <field name="status"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="level_of_study_action" model="ir.actions.act_window">
        <field name="name">Level of Study</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">level.of.study</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create a level of study
            </p>
        </field>
    </record>
</odoo>
