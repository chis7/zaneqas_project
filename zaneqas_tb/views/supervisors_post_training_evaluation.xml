<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="post_training_evaluation_form" model="ir.ui.view">
        <field name="name">training.supervisor.post.evaluation.form</field>
        <field name="model">training.supervisor.post.evaluation</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="'state' != 'draft'"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="'state' != 'confirm'"/>
                    <button name="action_draft" string="Draft" type="object" class="btn-primary" invisible="'state' != 'cancel'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="'state' not in ['draft', 'done', 'confirm']"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" decoration-bf="1"/>
                            <field name="gender"  widget="radio" options="{'horizontal': true}" decoration-bf="1"/>
                            <field name="age" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="institution" decoration-bf="1"/>
                            <field name="department" decoration-bf="1"/>
                        </group>
                    </group>
                    <separator/>
                    <group string="To complete this form, answer the questions by marking the box, or circling the appropriate number,
you believe most closely represents your opinion">
                        <group>
                            <field name="name_of_course" decoration-bf="1"/>
                            <field name="date_attended" decoration-bf="1"/>
                            <field name="course_duration" decoration-bf="1"/>
                            <field name="main_course_objective" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="level_of_training" decoration-bf="1"/>
                            <field name="training_institution" decoration-bf="1"/>
                            <field name="Sponsor" decoration-bf="1"/>
                        </group>
                    </group>
                    <separator/>
                    <group string="">
                        <group>
                            <field name="extent_objectives_achieved_before" decoration-bf="1"/>
                            <field name="performance_rating_before" decoration-bf="1"/>
                            <field name="able_to_apply_knowledge" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="extent_objectives_achieved_after" decoration-bf="1"/>
                            <field name="extent_training_helped" decoration-bf="1"/>
                            <field name="performance_rating_current" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="If the answer is No to question 5, please tick the factors which are hindering you from
applying the Knowledge, Skills and Attitude acquired to your job.">
                        <group>
                            <field name="hindering_factors_lack_of_understanding" decoration-bf="1"/>
                            <field name="hindering_factors_supervisor_priorities_other" decoration-bf="1"/>
                            <field name="hindering_factors_constant_changes" decoration-bf="1"/>
                            <field name="hindering_factors_processes_not_flexible" decoration-bf="1"/>
                            <field name="hindering_factors_lack_of_resources" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="hindering_factors_unclear_responsibilities" decoration-bf="1"/>
                            <field name="hindering_factors_not_enough_time" decoration-bf="1"/>
                            <field name="hindering_factors_not_relevant_to_current_job" decoration-bf="1"/>
                            <field name="hindering_factors_unclear_work_plans" decoration-bf="1"/>
                            <field name="hindering_factors_other" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="If the ‘lack of resources’ is one of hindering factors identified in question 6 (i) above, please indicate the
type of resources lacking.">
                        <group>
                            <field name="lack_of_resources_finances" decoration-bf="1"/>
                            <field name="lack_of_resources_equipment" decoration-bf="1"/>
                            <field name="lack_of_resources_other" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="lack_of_resources_information_technology" decoration-bf="1"/>
                            <field name="lack_of_resources_human_resource" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="Please tick factors that would enhance your application of learning">
                        <group>
                            <field name="factors_to_enhance_learning_more_training" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_right_job_placement" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_more_time" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="factors_to_enhance_learning_supervisor_Support" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_modern_equipment" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_others" decoration-bf="1"/>
                        </group>
                    </group>
                    <group string="To what extent have you been able to influence and assist the following staff as a result of your
training">
                        <group>
                            <field name="extent_assisted_staff_subordinates" decoration-bf="1"/>
                            <field name="extent_assisted_staff_colleagues" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_more_time" decoration-bf="1"/>
                        </group>
                        <group>
                            <field name="extent_assisted_staff_supervisor" decoration-bf="1"/>
                            <field name="usefulness_other" decoration-bf="1"/>
                            <field name="factors_to_enhance_learning_others" decoration-bf="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="supervisor_post_training_evaluation_action" model="ir.actions.act_window">
        <field name="name">Supervisor Post training Evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">training.course.evaluation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="xml">
            <tree>
                <field name="course_title" decoration-bf="1"/>
                <field name="institution" decoration-bf="1"/>
                <field name="date" decoration-bf="1"/>
                <field name="duration" decoration-bf="1"/>
            </tree>
        </field>
    </record>
</odoo>