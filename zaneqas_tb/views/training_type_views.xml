<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="type_of_training_tree" model="ir.ui.view">
        <field name="name">type.of.training.tree</field>
        <field name="model">type.of.training</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="type_of_training_form" model="ir.ui.view">
        <field name="name">type.of.training.tree</field>
        <field name="model">type.of.training</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="status"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="type_of_training_search" model="ir.ui.view">
        <field name="name">type.of.training.search</field>
        <field name="model">type.of.training</field>
        <field name="arch" type="xml">
            <search string="Type of Training">
                <field name="name"/>
                <field name="status"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="type_of_training_action" model="ir.actions.act_window">
        <field name="name">Type of Training</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">type.of.training</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create a training type
            </p>
        </field>
    </record>
</odoo>
