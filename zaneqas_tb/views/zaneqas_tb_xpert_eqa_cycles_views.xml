                    <t t-name="kanban-box">
                        <!--                        <div class="oe_kanban_global_click o_kanban_record">-->
                        <div class="o_kanban_details">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_left">
                                    <div class="o_kanban_record_title">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <!--                                <div class="o_kanban_record_right">-->
                            <!--                                    <field name="due_date" string="Due Date: "/>-->
                            <!--                                </div>-->
                            <div>
                                <field name="state" string="Status: "/>
                            </div>

                            <div class="o_kanban_record_bottom">
                                <button name="open_results_submission_wizard"
                                        confirm="You are about to start entering your results for submission. Are you sure you want to proceed?"
                                        string="Submit Results"
                                        type="object"
                                        class="btn-primary"
                                        invisible="user_in_assigned_company_and_open == False"/>

                                <!--                                <t t-if="user_in_assigned_company_and_open == False">-->
                                <!--                                    <h5>Results Submitted</h5>-->
                                <!--                                </t>-->


                                <!--                                <button name="action_print_results"-->
                                <!--                                        string="View Your Results"-->
                                <!--                                        type="object"-->
                                <!--                                        class="btn-primary"-->
                                <!--                                        invisible="user_in_assigned_company_and_results_published == False"/>-->


                            </div>
                        </div>
                        <!--                        </div>-->
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

